# zprofile

# ssh agent socket
if [ -z "$SSH_AUTH_SOCK" ] ; then
  eval `ssh-agent -s`
  ssh-add
fi

# start desktop env 

# start wayland
if [ "$(tty)" = "/dev/tty1" ]; then

  # load zshrc that sway have all settings
  source ~/.zshrc

  # load sway environment
    source ~/.config/sway/environment

  # start sway
	exec sway > ~/.sway.log 2>&1
fi

