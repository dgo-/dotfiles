# ssh config

# Notes:
# First match for a host will set the config value,
# so configure exact matches first and use wildcard later
# Put host configs in conf.d folder.

# Include config.d
Include config.d/*

{{ if lookPath "colima" -}}
# colima
Include ~/.colima/ssh_config
{{- end }}

# defaults
Host *
  compression yes  # enable compressions

  # disabled for security reasons
  ForwardAgent no
  ForwardX11 no

  # use default identity by default
  #IdentityFile ~/.ssh/keys/id_ed25519
  #IdentityFile ~/.ssh/keys/id_ecdsa
  #IdentitiesOnly yes
  PreferredAuthentications publickey

{{- if eq .chezmoi.os "darwin" }}
  # mac os keychain
  # IgnoreUnknown AddKeysToAgent,UseKeychain
  UseKeychain yes
  AddKeysToAgent yes
{{- end }}

