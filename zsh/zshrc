# set -x

# load libaries
for config_file (${ZSHLIB}/*.zsh); do
    source "${config_file}"
done

# load plugins
for plugin (${plugins}); do
	fpath=(${ZSHPLUG}/${plugin}/ ${fpath})
	source "${ZSHPLUG}/${plugin}/${plugin}.plugin.zsh"
done

autoload -U compinit
compinit -i

# PATH
PATH="${HOME}/bin:${PATH}"

# load theme
source "${ZSHTHEME}/${ZSH_THEME}.zsh-theme"

